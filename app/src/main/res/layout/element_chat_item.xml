<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_chat_profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/com_facebook_profile_picture_blank_square"
        android:contentDescription="@string/friend_image_profile" />

    <TextView
        android:id="@+id/tv_chat_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/iv_chat_profile"
        android:textStyle="bold"
        android:textSize="20sp"
        android:ellipsize="end"
        android:maxLength="12"
        android:maxLines="1"
        android:scrollHorizontally="true"/>

    <TextView
        android:id="@+id/tv_last_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/iv_chat_profile"
        android:layout_below="@id/tv_chat_name"
        android:textSize="20sp"
        android:ellipsize="end"
        android:maxLines="1"
        android:scrollHorizontally="true"/>

    <TextView
        android:id="@+id/tv_chat_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:textSize="12sp"
        android:maxLines="1"/>

</RelativeLayout>
